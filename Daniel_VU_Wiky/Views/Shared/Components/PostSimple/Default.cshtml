@model PostViewModel

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Topic</h5>
        <h6 class="card-subtitle mb-2 text-body-secondary">@Model.Author</h6>
        <p class="card-text">@Model.Content</p>
        <a class="btn btn-primary" asp-controller="Post" asp-action="Detail" asp-route-id="@Model.Id">Details</a>
    </div>
</div>

