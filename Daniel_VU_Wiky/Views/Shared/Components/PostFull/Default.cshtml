@model PostViewModel

<div class="container-fluid mb-4">
    <div class="card mb-4">
        <div class="card-header">
            <h4 class="card-title">@Model.Topic</h4>
            <h6 class="card-subtitle mb-2 text-body-secondary">Ecrit par @Model.Author</h6>
        </div>
        <div class="card-body">
            <p class="card-text">@Model.Content</p>

        </div>
        <div class="card-footer text-body-secondary d-flex justify-content-between">
            <div>
                <p class="my-2">Modifié le @Model.UpdatedAt.ToShortDateString() à @Model.UpdatedAt.ToShortTimeString()</p>
            </div>
            <div class="d-flex">
                <a class="btn btn-secondary" asp-controller="Comment" asp-action="Add" asp-route-postId="@Model.Id">Ajoute un commentaire (Formulaire)</a>
                <a class="btn btn-warning ms-5" asp-controller="Post" asp-action="Edit" asp-route-id="@Model.Id">Editer</a>
                <a class="btn btn-danger ms-2" asp-controller="Post" asp-action="Delete" asp-route-id="@Model.Id">Supprimer</a>
            </div>
        </div>
    </div>
    <div class="card ms-4">
        <div class="card-header">
            <h4 class="card-title">Commentaires</h4>
        </div>
        <div class="card-body">
            <vc:comment-form comment-view-model="@null" controller="Comment" action="Add" post-id=@Model.Id />
            <vc:comment-list comment-view-models="@Model.CommentViewModels" />
        </div>
    </div>
</div>